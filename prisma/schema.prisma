generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameType {
  SOLO
  MULTIPLAYER
}

model Word {
  id         Int       @id @default(autoincrement())
  key        String
  cue_word_1 String
  cue_word_2 String
  cue_word_3 String
  cue_word_4 String
  cue_word_5 String
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt()
  deleted_at DateTime?

  Games Game[]

  @@map("words")
}

model Game {
  id                Int       @id @default(autoincrement())
  type              GameType
  status            Boolean   @default(true)
  owner_id          Int
  scheduled_game_id Int?
  created_at        DateTime  @default(now())
  updated_at        DateTime? @updatedAt()
  deleted_at        DateTime?

  Owner         Player         @relation(fields: [owner_id], references: [id])
  ScheduledGame ScheduledGame? @relation(fields: [scheduled_game_id], references: [id])
  Words         Word[]

  @@map("games")
}

model Player {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique()
  password   String
  status     Boolean   @default(true)
  role       Role      @default(PLAYER)
  score      Int       @default(0)
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt()
  deleted_at DateTime?

  Games      Game[]
  OwnedRooms ScheduledGame[]

  @@map("players")
}

model ScheduledGame {
  id              Int                 @id @default(autoincrement())
  invitation_text String
  invited_emails  String[]
  accepted_emails Json?
  type            ScheduledGameType
  start_time      DateTime
  max_players     Int                 @default(8)
  rounds          Int                 @default(5)
  status          ScheduledGameStatus @default(PENDING)
  created_by      Int
  created_at      DateTime            @default(now())
  updated_at      DateTime?           @updatedAt()
  deleted_at      DateTime?

  Owner Player @relation(fields: [created_by], references: [id])
  Games Game[]

  @@map("scheduled_games")
}

enum ScheduledGameStatus {
  PENDING // The scheduled time has not passed yet
  ACTIVE // The scheduled time has passed
  DONE // The game has been played(or not) and is done. This means this game will not trigger colyseus room creations any more
}

enum ScheduledGameReminder {
  PENDING
  SENT
}

enum ScheduledGameType {
  INSTANT
  FUTURE
}

enum Role {
  ADMIN
  PLAYER
}
